require('/modules/publisher.js').exec(function (ctx) {
    var log = new Log('validation-api-endpoint');
    log.info(' validation jag file ');
    var req = ctx.request;
    var resp = ctx.response;
    var ref = require('utils').request;
    var obj = req.getAllParameters();
    var uri = req.getRequestURI();
    var assetApi = require('/modules/asset-api.js').api;
    var options = ref.getQueryOptions(req.getQueryString());
    var session = ctx.session;
    log.info(' request response '+ uri);
    log.info(' getAll parameters '+ stringify(obj));
    try{
        log.info(" options "+stringify(options));
        var asset = assetApi.search(options,req,resp,session);
        if(!asset){
            log.info("error on getting asset");
            return;
        }
        log.info("asset"+stringify(asset));
    }catch(e){
        log.info(e);
    }

}, request, response, session); %>
